<!DOCTYPE HTML>
<html>
<head>
    <title>Free Home Shoppe Website Template | Home :: w3layouts</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="/Asset/Client/css/bootstrap.css" rel="stylesheet" />
    <link href="/Asset/Client/css/bootstrap-theme.css" rel="stylesheet" />
    <link href="/Asset/Client/css/fontawesome.min.css" rel="stylesheet" />

    <link href="/Asset/Client/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <link href="/Asset/Client/css/slider.css" rel="stylesheet" type="text/css" media="all" />
    <script src="/Asset/Client/js/jquery-3.3.1.min.js"></script>
    <script src="/Asset/Client/js/bootstrap.min.js"></script>
    @*<script type="text/javascript" src="/Asset/Client/js/jquery-1.7.2.min.js"></script>*@
    <script type="text/javascript" src="/Asset/Client/js/move-top.js"></script>
    <script type="text/javascript" src="/Asset/Client/js/easing.js"></script>
    <script type="text/javascript" src="/Asset/Client/js/startstop-slider.js"></script>
</head>
<body>
    <div class="wrap">
        <div class="header">
            <div class="headertop_desc">
                @{Html.RenderAction("TopMenu", "Home"); }
            </div>
            <div class="header_top">
                <div class="logo">
                    <a href="index.html"><img src="/Asset/Client/images/logo.png" alt="" /></a>
                </div>
                <div class="cart">
                    <p>
                        Welcome to our Online Store! <span>Cart:</span><div id="dd" class="wrapper-dropdown-2">
                            0 item(s) - $0.00
                            <ul class="dropdown">
                                <li>you have no items in your Shopping cart</li>
                            </ul>
                        </div>
                    </p>
                </div>
                <script type="text/javascript">
                    function DropDown(el) {
                        this.dd = el;
                        this.initEvents();
                    }
                    DropDown.prototype = {
                        initEvents: function () {
                            var obj = this;

                            obj.dd.on('click', function (event) {
                                $(this).toggleClass('active');
                                event.stopPropagation();
                            });
                        }
                    }

                    $(function () {

                        var dd = new DropDown($('#dd'));

                        $(document).click(function () {
                            // all dropdowns
                            $('.wrapper-dropdown-2').removeClass('active');
                        });

                    });

                </script>
                <div class="clear"></div>
            </div>
            <div class="header_bottom">
                @{Html.RenderAction("MainMenu", "Home"); }
                <div class="search_box">
                    <form>
                        <input type="text" value="Search" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}"><input type="submit" value="">
                    </form>
                </div>
                <div class="clear"></div>
            </div>
            @RenderSection("slide", required: false)
        </div>
        <div class="main">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        @{Html.RenderAction("Footer", "Home"); }
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $().UItoTop({ easingType: 'easeOutQuart' });

        });
    </script>
    <a href="#" id="toTop"><span id="toTopHover"> </span></a>
</body>
</html>


